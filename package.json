{
  "name": "orph",
  "version": "3.0.2",
  "repository": "kthjm/orph",
  "author": "kthjm <toxictoxer@gmail.com>",
  "license": "MIT",
  "main": "dist/orph.cjs.js",
  "jsnext:main": "dist/orph.es.js",
  "module": "dist/orph.es.js",
  "description": "Design actions by restricting authority.",
  "keywords": ["react", "store"],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "nyc": {
    "require": ["babel-register", "jsdom-global/register"],
    "include": ["src"],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "pretest": "flow",
    "test": "cross-env NODE_ENV=TEST nyc mocha",
    "prebuild": "yarn test",
    "build": "cross-env NODE_ENV=BUILD node rollup.config.all.js",
    "postbuild": "run-s process format copy",
    "process:cjs": "node dist/orph.cjs.js",
    "process:min": "node dist/orph.min.js",
    "process": "run-p process:cjs process:min",
    "format": "prettier --write **/*.js package.json",
    "copy": "flow-copy-source --verbose src dist",
    "coverage": "nyc report --reporter=lcov && codecov"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.63.1",
    "flow-copy-source": "^1.2.1",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^4.1.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "power-assert": "^1.4.4",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rollup": "^0.54.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "sinon": "^4.1.5",
    "uglify-es": "^3.3.7"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  }
}
